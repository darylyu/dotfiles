set shiftwidth=4
set softtabstop=4
set tabstop=4
set autoindent
set ignorecase
set smartcase
set nostartofline
set expandtab

" always display the status line
set laststatus=2

set ruler
" disable visual bell
set t_vb=
set number
" enable mouse for all modes
set mouse=a

" keyboard mappings
map [ : tabp <cr>
map ] : tabnext <cr>
